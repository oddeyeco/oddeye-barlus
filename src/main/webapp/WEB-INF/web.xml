<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>base.oddeye.barlus.ServletConfigsListener</listener-class>
    </listener>
    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>/WEB-INF/log4j.properties</param-value>
    </context-param>    
    <servlet>
        <servlet-name>writedata</servlet-name>
        <servlet-class>base.oddeye.barlus.write</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Putclassic</servlet-name>
        <servlet-class>base.oddeye.barlus.Putclassic</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PutTSDB</servlet-name>
        <servlet-class>base.oddeye.barlus.PutTSDB</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>writedata</servlet-name>
        <url-pattern>/write</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Putclassic</servlet-name>
        <url-pattern>/put/classic</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PutTSDB</servlet-name>
        <url-pattern>/put/tsdb</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
